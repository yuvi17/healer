doctype html
html
  include head.jade
  link(href='/css/login.css', rel='stylesheet')
  include navbar.jade
  body
    .container.register
      .row
        h5.text-center Register With Us
        form.col.s12(method='post', action='/register/create')
          .row
            - if(err)
              p.warning
                | #{err}
            .input-field.col-sm-6.col-xs-12
              i.material-icons.prefix account_circle
              input#first_name.validate( name='firstName', type='text',required="required")
              label(class="active",for='first_name') First Name
            .input-field.col-sm-6.col-xs-12
              i.material-icons.prefix account_circle
              input#last_name.validate(type='text', name='lastName',required="required")
              label(class="active",for='last_name') Last Name
          .row
            .input-field.col-sm-12.col-xs-12
              i.material-icons.prefix email
              input#email.validate(type='email', name='email',required="required" )
              label(class="active",for='email') Email
            .input-field.col-sm-12.col-xs-12
              i.material-icons.prefix vpn_key
              input#password.validate(type='password', name='password',required="required")
              label(class="active",for='password') Password
            .row
              .col-xs-12
                h4
                  | And you are
                p.text
                  input#Doctor(name="userType", type="radio", value="doctor",required="required")
                  label(for='Doctor')
                    i.material-icons.prefix local_hospital
                    |  Doctor
                p.text
                  input#Patient(name="userType", type='radio', value='patient',required="required")
                  label(for='Patient')
                    i.material-icons.prefix accessible
                    |  Patient
            button.btn.waves-effect.waves-light.center-block.z-depth-2(type='submit', name='action')
              | Register
              i.material-icons.right send
  include foot.jade      